<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00838F"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="292dp"
        android:layout_height="106dp"
        android:text="My Tasks"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083" />

    <Button
        android:id="@+id/ButtonTaskAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:text="Add Task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ButtonTasksAll"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ButtonTasksAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="All Tasks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ButtonTaskAdd"
        app:layout_constraintTop_toTopOf="@+id/ButtonTaskAdd" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username's Tasks"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243" />

    <Button
        android:id="@+id/task1button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:text="task1"
        app:layout_constraintStart_toStartOf="@+id/ButtonTaskAdd"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/task2button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="task2"
        app:layout_constraintStart_toStartOf="@+id/task1button"
        app:layout_constraintTop_toBottomOf="@+id/task1button" />

    <Button
        android:id="@+id/task3button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="task3"
        app:layout_constraintBottom_toTopOf="@+id/ButtonTaskAdd"
        app:layout_constraintStart_toStartOf="@+id/task2button"
        app:layout_constraintTop_toBottomOf="@+id/task2button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        app:layout_constraintEnd_toEndOf="@+id/ButtonTasksAll"
        app:layout_constraintTop_toTopOf="@+id/task1button" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="342dp"
        android:layout_height="164dp"
        android:layout_marginTop="36dp"
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

</androidx.constraintlayout.widget.ConstraintLayout>