<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsSaveButton">


        <RadioButton
            android:id="@+id/radioButtonBlueTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Blue Team"
            app:layout_constraintBottom_toTopOf="@+id/radioButtonRedTeam"
            app:layout_constraintTop_toBottomOf="@+id/AddTask"
            tools:layout_editor_absoluteX="227dp" />

        <RadioButton
            android:id="@+id/radioButtonRedTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Red Team"
            app:layout_constraintBottom_toTopOf="@+id/radioButtonGreenTeam"
            app:layout_constraintStart_toStartOf="@+id/radioButtonBlueTeam"
            app:layout_constraintTop_toBottomOf="@+id/radioButtonBlueTeam" />

        <RadioButton
            android:id="@+id/radioButtonGreenTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Green Team"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/radioButtonRedTeam"
            app:layout_constraintTop_toBottomOf="@+id/radioButtonRedTeam" />


    </RadioGroup>

    <EditText
        android:id="@+id/usernameEditBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.259" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        app:layout_constraintBottom_toTopOf="@+id/usernameEditBox"
        app:layout_constraintStart_toStartOf="@+id/usernameEditBox" />

    <Button
        android:id="@+id/settingsSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="@+id/usernameEditBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/usernameEditBox"
        app:layout_constraintTop_toTopOf="@+id/usernameEditBox" />
</androidx.constraintlayout.widget.ConstraintLayout>